{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@onic/components/*": ["packages/components/src/*"],
      "@onic/utils/*": ["packages/utils/src/*"],
      "@onic/argus-frontend/*": ["packages/apps/argus/frontend/src/*"],
      "@onic/shinigami-frontend/*": ["packages/apps/shinigami/frontend/src/*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
